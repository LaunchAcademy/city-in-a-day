<!DOCTYPE html>
<html>
  <head>
    <title>CityInADay</title>
    <%= csrf_meta_tags %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="content">
      <nav class="navbar">
        <ul>
          <li><span id='logo'><%= link_to "CITY IN A DAY", root_path %></span></li>
          <li><%= link_to 'About Us', '#about-us' %></li>
          <li><%= link_to 'FAQ', '#' %></li>

          <% if user_signed_in? %>
            <li><div id='user-authentication'><%= link_to "#{current_user.first_name}" + " #{current_user.last_name}", profile_path(current_user) %>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></div></li>
          <% else %>
            <li><div id='user-authentication'><%= link_to 'Sign In', new_user_session_path %>
            <%= link_to 'Sign Up', new_user_registration_path %></div></li>
          <% end %>
        </ul>
      </nav>

      <% flash.each do |type, message| %>
        <span class="error_msgs">
          <div data-alert class="alert-box <%= type %>">
            <%= message %>
          </div>
        </span>
      <% end %>
      <!-- main content -->
    </div>
    <div class="wrapper">
      <%= yield %>
      <div class="push"></div>
    </div>
    <div class="footer"><%= render "layouts/footer" %></div>
  </body>
</html>
