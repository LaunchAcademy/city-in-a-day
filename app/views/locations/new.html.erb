<div class="location-form">
  <%= simple_form_for [@trail, @location] do |f| %>
    <div class="error-messages">
      <% if @location.errors.any? %>
        <h2><%= pluralize(@location.errors.count, "error") %> prohibiited this answer from being saved:</h2>
      <% end %>

      <% @location.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    </div>

    <div class="form">
      <%= "NAME OF YOUR ADVENTURE: #{@trail.name}" %>
      <%= "MOOD OF YOUR ADVENTURE: #{@trail.mood}" %>
      <%= f.input :name, label: 'Name of Location' %>
      <%= f.input :location, label: 'Where was it?', required: true %>
      <%= f.input :description, label: 'Tell us a little bit about it:', required: true %>
      <%= f.input :price, label: 'What was the price?', collection: Location::PRICES %>
      <%= f.submit 'Make New Location' %>
    </div>
  <% end %>
</div>
